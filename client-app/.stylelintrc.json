{
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "theme",
          "apply",
          "layer",
          "import",
          "tailwind",
          "base",
          "components",
          "utilities",
          "responsive",
          "screen"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "screen"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["@apply"]
      }
    ]
  }
}
